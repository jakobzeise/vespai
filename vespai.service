[Unit]
Description=VespAI Hornet Detection System
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/vespai
ExecStartPre=/home/vespai/update_vespai.sh
ExecStart=/home/vespai/start_vespai.sh
Restart=always
RestartSec=10
StandardOutput=append:/var/log/vespai.log
StandardError=append:/var/log/vespai.log

[Install]
WantedBy=multi-user.target